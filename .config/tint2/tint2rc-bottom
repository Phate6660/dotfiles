# Panel Autohide
autohide = 1
autohide_show_timeout = 0
autohide_hide_timeout = 0
autohide_height = 0
strut_policy = minimum

# Taskbar
taskbar_mode = single_desktop
taskbar_padding = 2 3 2
taskbar_background_id = 0
taskbar_active_background_id = 0

# Fonts
task_font = Misc Fixed 9
task_font_color = #aaffaa 68
task_active_font_color = #aaffaa 83
task_urgent_font_color = #aaffaa 83
task_iconified_font_color = #aaffaa 68
font_shadow = 0

# Tooltips
tooltip = 0

# Mouse
mouse_middle = none
mouse_right = close
mouse_scroll_up = toggle
mouse_scroll_down = iconify

# Executor 1 - state
execp = new
execp_command = mpc | sed -n 2p | awk -F\  '{ print $1 }'
execp_tooltip =
execp_has_icon = 0
execp_interval = 1
execp_centered = 1
execp_font = Misc Fixed 9
execp_markup = 0
execp_font_color = #aaffaa 100
execp_background_id = 0
execp_padding = 3 0 0

# Executor 2 - separator
execp = new
execp_command = echo "|"
execp_tooltip =
execp_has_icon = 0
execp_interval = 1
execp_centered = 1
execp_font = Misc Fixed 9
execp_markup = 0
execp_font_color = #aaffaa 100
execp_background_id = 0
execp_padding = 3 0 0

# Executor 3 - elapsed/total
execp = new
execp_command = mpc | sed -n 2p | tr -s ' ' | awk -F\  '{ print $3 }'
execp_tooltip =
execp_has_icon = 0
execp_interval = 1
execp_centered = 1
execp_font = Misc Fixed 9
execp_markup = 0
execp_font_color = #aaffaa 100
execp_background_id = 0
execp_padding = 3 0 0

# Executor 4 - separator
execp = new
execp_command = echo "|"
execp_tooltip =
execp_has_icon = 0
execp_interval = 1
execp_centered = 1
execp_font = Misc Fixed 9
execp_markup = 0
execp_font_color = #aaffaa 100
execp_background_id = 0
execp_padding = 3 0 0


# Executor 5 - music info
execp = new
execp_command = mpc -f "[%genre% -- ][%title% - ][[(%date%)[ ]%album%]][ - %artist%]" | head -n1
execp_tooltip =
execp_has_icon = 0
execp_interval = 1
execp_centered = 1
execp_font = Misc Fixed 9
execp_markup = 0
execp_font_color = #aaffaa 100
execp_background_id = 0
execp_padding = 3 0 0
