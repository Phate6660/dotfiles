## Programs that will run after Openbox has started ##

# Set dpi to 96
xrandr --dpi 96 &

# Merge xresources
xrdb -merge ~/.Xresources

# Start dunst
dunst &

# Mount usb devices
udiskie &

# Set the wallpaper
hsetroot -full ~/wallpaper2.png &

# Start xscreensaver
xscreensaver &

# Launch Xcomppmgr and tint2 with openbox
if which tint2 >/dev/null 2>&1; then
  (sleep 2 && xcompmgr) &
  (sleep 2 && tint2 -c ~/.config/tint2/tint2rc) &
  (sleep 2 && tint2 -c ~/.config/tint2/tint2rc-apps) &
fi

# Start rclone-browser
rclone-browser &

# Start my systray icon
systray-indicator &
