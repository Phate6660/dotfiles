## LTO
NTHREADS="4"
source make.conf.lto

## Compilation flags
CFLAGS="-march=ivybridge -pipe -msse -msse2 -msse3 -mmmx -falign-functions=32 ${CFLAGS}"
CXXFLAGS="${CFLAGS}"
LDFLAGS="${LDFLAGS} -Wl,--hash-style=gnu"
FCFLAGS="${CFLAGS}"
FFLAGS="${CFLAGS}"
MAKEOPTS="-j${NTHREADS}"
CPU_FLAGS_X86="aes avx f16c mmx mmxext pclmul popcnt sse sse2 sse3 sse4_1 sse4_2 ssse3"
CMAKE_MAKEFILE_GENERATOR="ninja"

## Portage Settings
EMERGE_DEFAULT_OPTS="--quiet-build=y"
FEATURES="clean-logs ccache"
PORTDIR="/usr/portage"
DISTDIR="/usr/portage/distfiles"
PKGDIR="/usr/portage/packages"
PORT_LOGDIR="/var/log/portage"
CCACHE_DIR="/var/cache/ccache"
PORTAGE_NICENESS="15"

## Language
# This sets the language of build output to English.
# Please keep this setting intact when reporting bugs.
LC_MESSAGES=C

## Mirrors
GENTOO_MIRRORS="https://mirrors.lug.mtu.edu/gentoo/ http://mirrors.lug.mtu.edu/gentoo/ https://mirrors.rit.edu/gentoo/ http://mirrors.rit.edu/gentoo/ https://mirror.sjc02.svwh.net/gentoo/ http://mirror.sjc02.svwh.net/gentoo/"

## USE flags
USE="alsa pulseaudio mpd"                                                                     # Audio - Servers
USE="$USE audiofile flac lame twolame vorbis ogg wavpack"                                     # Audio - Codecs
USE="$USE openssl"                                                                            # SSL Support
USE="$USE cli"                                                                                # CLI Support
USE="$USE hwaccel"                                                                            # Hardware Acceleration Support
USE="$USE dbus consolekit"                                                                    # dbus and consolekit Support
USE="$USE imagemagick openimageio"                                                            # Image - The Essential ImageMagick
USE="$USE png jpeg gif tiff"                                                                  # Image - Codecs
USE="$USE offensive"                                                                          # Offensive Packages/Features Support
USE="$USE curl"                                                                               # cURL Support
USE="$USE unicode"                                                                            # Unicode Support
USE="$USE dvd cdda cddb"                                                                      # DVD, CD, and CD Database Support
USE="$USE tools"                                                                              # ???
USE="$USE libmpv lua libass drm"                                                              # MPV, LUA, Subtitles (ass) Support, and Direct Rendering Manager (DRM) Support
USE="$USE man"                                                                                # Man(pages) Support
USE="$USE ffmpeg xcb"                                                                         # Audio/Image/Video - The Essential ffmpeg
USE="$USE X xinerama xscreensaver"                                                            # X* Support
USE="$USE fftw"                                                                               # ???
USE="$USE gtk"                                                                                # GTK Support
USE="$USE custom-cflags custom-optimization"                                                  # Custom Flags/Optimizations for Certain Programs Support
USE="$USE eme-free"                                                                           # For Firefox
USE="$USE webengine widgets webchannel"                                                       # For Qutebrowser
USE="$USE taglib"                                                                             # Metadata Editing Support
USE="$USE contrib"                                                                            # ???
USE="$USE ncurses"                                                                            # Ncurses Support
USE="$USE emacs"                                                                              # Emacs Support
USE="$USE lto graphite"                                                                       # LTO and Graphite support.
USE="$USE otr"                                                                                # Off The Record Encryption Support
USE="$USE opengl"                                                                             # OpenGL Support
USE="$USE dnscrypt"                                                                           # DNSCrypt Support
USE="$USE pgo"                                                                                # Profile Guided Optimization Support
USE="$USE libnotify"                                                                          # Notification support

USE="$USE -bindist -kde -systemd -multilib -gmp-autoupdate -geoloc -geoip -gnome -cups"       # I don't need...
USE="$USE -printsupport -bluetooth -networkmanager -webp -gpg -qt5 -fdk -joystick"            # (nor want) any of these.

# For Xorg
INPUT_DEVICES="libinput"
VIDEO_CARDS="nvidia"
